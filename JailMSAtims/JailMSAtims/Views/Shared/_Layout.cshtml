<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title ATIMS JMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
   
    
    <script>
        $(document).ready(function () {
            $("ul.navbar-left li a").click(function(){
                var page=$(this).attr('href');
                $("#body").load(@Url.Content("/Home/")+page);
                return false;
            });
            $("div.navbar-header a").click(function () {
                var page = $(this).attr('href');
                $("#body").load("/Home/" + page);
                return false;
            });
        });
    </script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="Index" class="navbar-brand">
                    <img src="@Url.Content("~/content/logo.jpg")" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="Index">Home</a></li>
                    <li><a href="Users">User Management</a></li>
                    <li><a href="PreBook">Pre-Book</a></li>
                    <li><a href="PreScreen">Pre-Screen</a></li>
                    <li><a href="Intake">Intake</a></li>
                    <li><a href="Booking">Booking</a></li>
                    <li><a href="Classification">Classification</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" id="body">
       @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ATIMS JMS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
