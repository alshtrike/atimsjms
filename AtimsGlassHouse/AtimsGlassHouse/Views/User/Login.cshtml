<div id="glass-login-container" ng-controller="GlassHouseLoginController as glassLoginCtrl">

    <div id="glass-login-processing" ng-show="glassLoginCtrl.showingView('loginProcessing')">

    </div>

    <div id="glass-login-form" ng-show="glassLoginCtrl.showingView('loginForm')">
        <p>Please enter your user credentials.</p>
        <ul>
            <li>
                <label> Username </label>
                <input type="text" ng-model="username" placeholder="Username" />
            </li>
            <li>
                <label> Password </label>
                <input type="password" ng-model="password" placeholder="Password" />
            </li>
            <li><button ng-click="glassLoginCtrl.submitLoginForm( )">Login</button></li>
            <li><button ng-click="glassLoginCtrl.switchView('loginForgot')">Forgot Password?</button></li>
        </ul>
    </div>

    <div id="glass-login-forgot" ng-show="glassLoginCtrl.showingView('loginForgot')">
        <p>Please enter your email address to reset your password. Note: Password reset may require admin authorization.</p>
        <ul>
            <li>
                <label> Email </label>
                <input type="text" ng-model="email" placeholder="Email" />
            </li>
            <li><button ng-click="glassLoginCtrl.submitLoginForgot( )">Reset Password</button></li>
            <li><button ng-click="glassLoginCtrl.switchView('loginForm')">Return to Login</button></li>
        </ul>
    </div>

</div>