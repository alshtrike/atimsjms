@using Microsoft.AspNet.Identity
@using System.Web.Mvc.Ajax

@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Ajax.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", new AjaxOptions { UpdateTargetId = "content" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else {
    <ul class="nav navbar-nav navbar-right">
        <li>@Ajax.ActionLink("Register", "Register", "Account", new AjaxOptions { UpdateTargetId = "content" })</li>
        <li>@Ajax.ActionLink("Log in", "Login", "Account", new AjaxOptions { UpdateTargetId = "content" })</li>
    </ul>
}
