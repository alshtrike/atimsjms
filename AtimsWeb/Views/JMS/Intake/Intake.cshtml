<form ng-controller="IntakeController">
    <div class="form-group">
        <label class="col-sm-2 control-label">Inmate Number</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" min="1" ng-model="newInmate.inmate_number" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" ng-model="newInmate.Person.person_first_name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Middle Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" ng-model="newInmate.Person.person_middle_name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" ng-model="newInmate.Person.person_last_name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Age</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" min="1" ng-model="newInmate.Person.person_age" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date of Birth</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" ng-model="newInmate.Person.person_dob" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date Recieved</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" ng-model="newInmate.received_date" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date Released</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" ng-model="newInmate.inmate_scheduled_release_date" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Active?</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" min="0" max="1" ng-model="newInmate.inmate_active" />
        </div>
    </div>
