<div class="form-group">
    <label class="col-sm-2 control-label">Closet Item Name</label>
    <div class="col-sm-10">
        <input type="text" class="form-control validate" ng-model="newInmate.Person.person_first_name" ng-pattern="/^[a-zA-Z]*$/" required />
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Quantity</label>
    <div class="col-sm-10">
        <input type="number" class="form-control validate" min="0" ng-model="newInmate.inmate_number" />
    </div>
</div>

<div class="col-sm-offset-2 col-sm-10">
    <input type="submit" ng-click="updateProgress('next')" ng-disabled="preBookForm.$invalid" class="btn btn-default" value="Submit" />
</div>