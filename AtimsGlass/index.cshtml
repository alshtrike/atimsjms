<!DOCTYPE html>

<html ng-app="glassHouseApp" ng-controller="GlassHouseController as glassCtrl">

<head>
    <meta name="viewport" content="width=device-width" />
    <title ng-bind="glassPageTitle"></title>

    <!-- Dependencies -->
    <script src="~/scripts/jquery-2.1.3.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
    <script src="~/scripts/angular.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    
    <!-- Atims Glasshouse -->
    <script src="/scripts/glass.js"></script>
    <link href="/Content/glass.css" rel="stylesheet" />

</head>

<body style="margin-right:0px; margin-left:0px;margin-top:0px;">
    <div id="glass-loading"></div>
    <div id="glass-loading-hider">
        <!-- Header Nav Bar -->
        <div style="position:fixed; width:100%; z-index:100; top:0;">
            <nav class="navbar navbar-inverse navbar-over">
                <div class="navbar-header navbar-logo pull-left">
                    Atims JMS
                </div>
                <button class="btn navbar-btn pull-left" ng-click="menuToggle( )" id="menu-toggle">
                    {{menuToggleText}}
                </button>
                <div class="navbar-header pull-right">
                    <div class="dropdown" id="messages-dropdown">
                        <!-- TODO -->
                        <a class="btn navbar-btn" href="#" data-toggle="dropdown">
                            X Messages
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li class="dropdown-header">
                                Messages
                            </li>
                            <li>
                                <ul class="dropdown-textlink">
                                    <li>
                                        <a href="#">
                                            .. messages here ..
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="dropdown-footer" href="#">
                                    See All Messages
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <!-- TODO -->
                        <a class="btn navbar-btn" href="#" data-toggle="dropdown">
                            X Notifications
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li class="dropdown-header">
                                Notifications
                            </li>
                            <li>
                                <ul class="dropdown-textlink">
                                    <li>
                                        <a href="#">
                                            .. notifications here ..
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="dropdown-footer" href="#">
                                    See All Notifications
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <!-- TODO -->
                        <a class="btn navbar-btn" href="#" data-toggle="dropdown">
                            X Tasks
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li class="dropdown-header">
                                Tasks
                            </li>
                            <li>
                                <ul class="dropdown-textlink">
                                    <li>
                                        <a href="#">
                                            .. tasks here ..
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="dropdown-footer" href="#">
                                    See All Tasks
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Module Nav Bar -->
            <nav class="nav navbar-default navbar-under">
                <div class="nav navbar-nav" style="position:relative; width:980px; margin:0 auto;">
                    <div class="dropdown" ng-repeat="module in moduleMenu">
                        <a class="btn navbar-btn" data-toggle="dropdown">
                            {{module.name}}
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-navlink" ng-repeat="subModule in module.subModuleMenu"
                                ng-click="goToSubModule(module.name, subModule.name)">
                                {{subModule.name}}
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div id="wrapper" style="padding-bottom:0px; margin-top:100px;">
            <!-- Sidebar -->
            <div id="sidebar-wrapper" style="position:fixed;height:100%;">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        {{ selectedModule.name }}
                    </li>
                    <li ng-repeat="subModule in selectedModule.subModuleMenu" ng-class="{'sidebar-nav-selected': selectedModule.subModuleMenu[$index] == selectedSubModule}" ng-click="goToSubModule(selectedModule.name,subModule.name)">
                        {{ subModule.name }}
                    </li>
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->
            <!-- Page Content -->
            <div id="page-content-wrapper" style="padding:0px 0px 0px 0px; margin-left:200px; height:100%">
                <div class="container-fluid page-padding" ng-include="page" onload="pageLoaded()"></div>
                <p> Page: {{page}}</p>
            </div>
            <!-- /#page-content-wrapper -->
        </div>
        <!-- /#wrapper -->
        <div class="style-footer"></div>
    </div>
</body>

</html>


